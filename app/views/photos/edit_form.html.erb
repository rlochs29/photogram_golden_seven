<h1>Edit Photo 13</h1>

<form action="/update_photo/<%= @photo_to_be_edited.id %>">
  <div>
    <label for="source_input">
      Image URL
    </label>

    <input id="source_input" type="text" name="the_source" value="<%= @photo_to_be_edited.source %>">
  </div>

  <div>
    <label for="caption_input">
      Caption
    </label>

    <input id="caption_input" type="text" name="the_caption" value="<%= @photo_to_be_edited.id %>">
  </div>

  <button>
    Update Photo
  </button>
</form>
